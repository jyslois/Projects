<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <ImageView
        android:id="@+id/traumareflectionbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetStart="0dp"
            android:background="#BAE3BEB6"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textColor="#2C0D0D"
                android:text="「트라우마 : 회고」"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/progress_4"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                app:tint="#2C0D0D"/>

        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Record_Reflection_Instruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="그 일은 지금의 내게 어떤 영향을 미치고 있나요?"
                    android:textColor="#CDAF97"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Record_Reflection_Tips"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="38dp"
                    android:layout_toRightOf="@id/Record_Reflection_Instruction"
                    android:padding="10dp"
                    android:src="@drawable/tips"
                    app:tint="#CDAF97" />

            </RelativeLayout>

            <EditText
                android:backgroundTint="#E9BE9F98"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:textSize="15dp"
                android:lines="10"
                android:background="@drawable/border"
                android:hint="@string/traumaReflectionHints"
                android:id="@+id/Record_Reflection_UserInput"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <Button
                    android:id="@+id/Record_EmotionHelpButton"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#C1A39D"
                    android:text="감정 설명서 보기" />

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <Button
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="이전"
                        android:layout_marginBottom="30dp"
                        android:id="@+id/Record_PreviousButton"
                        android:backgroundTint="#A68B86"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="저장"
                        android:layout_marginBottom="30dp"
                        android:id="@+id/Record_SaveButton"
                        android:backgroundTint="#FFDDD5"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>