<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <ImageView
        android:id="@+id/recordbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#BAE3BEB6"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetStart="0dp"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:text="트라우마 ㆍ 감정"
                    android:textColor="#2C0D0D"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <ImageView
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/progressbar"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.23"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/progress_3"
                    app:tint="#2C0D0D" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintTop_toBottomOf="@id/toolbar">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/emotions"
                android:background="@drawable/border"
                android:backgroundTint="#D5CDACA4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintWidth_percent="1">

                <RadioGroup
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/emotions1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_marginLeft="5dp"
                        android:id="@+id/happinessButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="기쁨"
                        android:buttonTint="#FFC000"
                        />

                    <RadioButton
                        android:layout_marginLeft="5dp"
                        android:id="@+id/anticipationButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="기대"
                        android:buttonTint="#00B050"
                        android:layout_gravity="center"
                        />

                    <RadioButton
                        android:layout_marginLeft="5dp"
                        android:id="@+id/trustButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="신뢰"
                        android:buttonTint="#0628A1"
                        android:layout_gravity="center"
                        />


                    <RadioButton
                        android:layout_marginLeft="5dp"
                        android:paddingRight="8dp"
                        android:id="@+id/surpriseButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="놀람"
                        android:buttonTint="#FFFF00"
                        android:layout_gravity="center"
                        />
                </RadioGroup>

                <RadioGroup
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/emotions1"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/emotions2"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:layout_marginLeft="5dp"
                        android:id="@+id/sadnessButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="슬픔"
                        android:buttonTint="#767171"
                        android:layout_gravity="center"
                        />

                    <RadioButton
                        android:layout_marginLeft="5dp"
                        android:id="@+id/disgustButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="혐오"
                        android:buttonTint="#C55A11"
                        android:layout_gravity="center"
                        />

                    <RadioButton
                        android:layout_marginLeft="5dp"
                        android:id="@+id/fearButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="공포"
                        android:buttonTint="#000000"
                        android:layout_gravity="center"
                        />


                    <RadioButton
                        android:layout_marginLeft="5dp"
                        android:paddingRight="8dp"
                        android:id="@+id/angerButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="분노"
                        android:buttonTint="#FF0000"
                        android:layout_gravity="center"
                        />
                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emotions"
            android:backgroundTint="#F6D0C7"
            android:id="@+id/Record_Emotion_Tips"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="1"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.055"
            android:text="어떤 감정을 느꼈나요?" />


        <Button
            app:layout_constraintTop_toBottomOf="@id/Record_Emotion_Tips"
            android:id="@+id/Record_EmotionHelpButton"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintHeight_percent="0.055"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:backgroundTint="#DCBBB5"
            android:text="감정 설명서 보기" />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/Record_EmotionHelpButton"
            android:id="@+id/Record_Emotion_Instruction_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="감정을 자세하게 기록해 보아요. (선택)"
            android:textColor="#E4C3A9"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Record_Emotion_UserInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:backgroundTint="#E9BE9F98"
            android:gravity="top|left"
            android:hint="@string/emotionHints"
            android:lines="6"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/Record_Emotion_Instruction_2"
            app:layout_constraintWidth_percent="1" />


        <Button
            android:id="@+id/Record_PreviousButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.06"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#A68B86"
            android:text="이전"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Record_Emotion_UserInput"
            app:layout_constraintWidth_percent="0.3" />

        <Button
            android:id="@+id/Record_NextButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.06"
            android:backgroundTint="#E1BEB6"
            android:text="▶ 다음"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/Record_PreviousButton"
            app:layout_constraintTop_toTopOf="@id/Record_PreviousButton"
            app:layout_constraintWidth_percent="0.64" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

