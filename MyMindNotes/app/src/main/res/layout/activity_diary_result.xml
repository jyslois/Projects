<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="right"
                        android:text="타입"
                        android:textColor="#CDAF97"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000. 00. 00"
                        android:textColor="#CDAF97"
                        android:textStyle="bold"
                        android:id="@+id/date"
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_margin="20dp"/>

                    <TextView
                        android:id="@+id/Result_Situation_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="70dp"
                        android:text="〔 상황 〕"
                        android:textColor="#E4C5AB"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Result_Situation_UserInput"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Result_Situation_Title"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/border"
                        android:backgroundTint="#C3FAD1C8"
                        android:padding="10dp"
                        android:text="상황 기록"
                        android:textSize="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginStart="10dp"
                        android:id="@+id/Result_Thought_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="〔 생각 〕"
                        android:textStyle="bold"
                        android:textColor="#E4C5AB"
                        android:textSize="18dp" />


                    <TextView
                        android:id="@+id/Result_Thought_UserInput"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Result_Thought_Title"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/border"
                        android:backgroundTint="#C3FAD1C8"
                        android:padding="10dp"
                        android:text="생각 기록"
                        android:textSize="15dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="340dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginStart="10dp"
                        android:id="@+id/Result_Emotion_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="〔 감정 〕"
                        android:textStyle="bold"
                        android:textColor="#E4C5AB"
                        android:textSize="18dp" />

                    <RelativeLayout
                        android:id="@+id/Result_CoreEmotion"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Result_Emotion_Title"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#C3FAD1C8"
                        android:background="@drawable/border"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/resultEmotionText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:text="감정" />
                    </RelativeLayout>



                </RelativeLayout>

                <TextView
                    android:backgroundTint="#C3FAD1C8"
                    android:padding="10dp"
                    android:id="@+id/Result_Emotion_UserInput"
                    android:text="감정 기록"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Result_Thought_Title"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:textSize="15dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginStart="10dp"
                        android:id="@+id/Result_Reflection_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="〔 회고 〕"
                        android:textStyle="bold"
                        android:textColor="#E4C5AB"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/Result_Reflection_UserInput"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Result_Reflection_Title"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/border"
                        android:backgroundTint="#C3FAD1C8"
                        android:padding="10dp"
                        android:text="회고 기록"
                        android:textSize="15dp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <Button
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#A68B86"
                        android:text="◀ 이전"
                        android:id="@+id/Result_PreviousButton"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_marginTop="30dp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#A68B86"
                        android:text="수정"
                        android:id="@+id/Result_EditButton"/>
                </LinearLayout>

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="메인으로 돌아가기"
                    android:backgroundTint="#E1BEB6"
                    android:id="@+id/Result_EndButton"
                    android:layout_marginBottom="30dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
