<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.04"
                android:id="@+id/guideline_tab_top"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1"
                android:id="@+id/guideline_tab_bottom"/>

            <com.google.android.material.tabs.TabLayout
                android:background="#FFDED6"
                app:tabSelectedTextColor="#A5837C"
                app:tabTextColor="#574E4D"
                android:id="@+id/tabLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/guideline_tab_top"
                app:layout_constraintBottom_toBottomOf="@id/guideline_tab_bottom"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.14"
                android:id="@+id/guideline_date_type"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/guideline_date_type"
                app:layout_constraintRight_toLeftOf="@id/date"
                android:id="@+id/type"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/guideline_date_type"
                app:layout_constraintRight_toRightOf="@id/guideline_right"
                android:id="@+id/date"/>


            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.75"
                android:id="@+id/guideline_viewpager_bottom"/>

<!--            <androidx.viewpager2.widget.ViewPager2-->
<!--                android:id="@+id/viewpager2"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="0dp"-->
<!--                app:layout_constraintLeft_toLeftOf="@id/guideline_left"-->
<!--                app:layout_constraintRight_toRightOf="@id/guideline_right"-->
<!--                app:layout_constraintTop_toTopOf="@id/guideline_viewpager_top"-->
<!--                app:layout_constraintBottom_toBottomOf="@id/guideline_viewpager_bottom"/>-->

            <androidx.core.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                app:layout_constraintRight_toRightOf="@id/guideline_right"
                app:layout_constraintTop_toTopOf="@id/guideline_viewpager_top"
                app:layout_constraintBottom_toBottomOf="@id/guideline_viewpager_bottom"
                android:fillViewport="true">
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewpager2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.core.widget.NestedScrollView>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.18"
                android:id="@+id/guideline_viewpager_top"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.07" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.93" />

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.78"
                android:id="@+id/guideline_button"/>

            <Button
                app:layout_constraintTop_toTopOf="@id/guideline_button"
                app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.3"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.065"
                android:backgroundTint="#A68B86"
                android:text="삭제" />

            <Button
                app:layout_constraintTop_toTopOf="@id/guideline_button"
                android:layout_marginLeft="15dp"
                app:layout_constraintRight_toRightOf="@id/guideline_right"
                android:id="@+id/editButton"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.5"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.065"
                android:layout_weight="1"
                android:backgroundTint="#A68B86"
                android:text="수정" />

            <Button
                app:layout_constraintTop_toBottomOf="@id/deleteButton"
                android:id="@+id/backtoListButton"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                app:layout_constraintRight_toRightOf="@id/guideline_right"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.065"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="50dp"
                android:backgroundTint="#E1BEB6"
                android:text="목록으로 돌아가기" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
