<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainPage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        android:background="#84AED1"
        android:gravity="center">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/titleicon"
            app:tint="#F3F5F6"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 마음 일지"
            android:textColor="#F3F5F6"
            android:textSize="18dp"
            android:layout_gravity="left" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="따끈따끈/캐캐묵은"
                android:id="@+id/Result_Type"
                android:gravity="right"
                android:layout_margin="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000. 00. 00"
                android:id="@+id/Result_Date"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"/>

            <ImageView
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/titleicon"
                android:id="@+id/Result_Situation_Icon"
                app:tint="#2C2B2B" />

            <TextView
                android:layout_marginTop="60dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상황"
                android:textColor="#2C2B2B"
                android:textSize="23dp"
                android:layout_toRightOf="@id/Result_Situation_Icon"
                android:id="@+id/Result_Situation_Title"/>

            <TextView
                android:layout_below="@id/Result_Situation_Title"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ"
                android:textSize="14dp"
                android:background="@drawable/border"
                android:id="@+id/Result_Situation_UserInput"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/titleicon"
                android:id="@+id/Result_Thought_Icon"
                app:tint="#2C2B2B" />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생각"
                android:textColor="#2C2B2B"
                android:textSize="23dp"
                android:layout_toRightOf="@id/Result_Thought_Icon"
                android:id="@+id/Result_Thought_Title"/>

            <TextView
                android:id="@+id/Result_Thought_UserInput"
                android:text="ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Result_Thought_Title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:textSize="14dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/titleicon"
                android:id="@+id/Result_Emotion_Icon"
                app:tint="#2C2B2B" />

            <TextView
                android:id="@+id/Result_Emotion_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/Result_Emotion_Icon"
                android:text="감정"
                android:textColor="#2C2B2B"
                android:textSize="23dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Result_Emotion_Icon"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:layout_marginLeft="20dp"
                android:id="@+id/Result_CoreEmotion">

                <TextView
                    android:id="@+id/resultEmotionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="감정" />
            </RelativeLayout>



        </RelativeLayout>

        <TextView
            android:id="@+id/Result_Emotion_UserInput"
            android:text="ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Result_Thought_Title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/titleicon"
                android:id="@+id/Result_Reflection_Icon"
                app:tint="#2C2B2B" />

            <TextView
                android:id="@+id/Result_Reflection_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/Result_Reflection_Icon"
                android:text="회고"
                android:textColor="#2C2B2B"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/Result_Reflection_UserInput"
                android:text="ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Result_Reflection_Title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:textSize="14dp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="◀ 이전"
                android:id="@+id/Result_PreviousButton"/>

            <Button
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="수정"
                android:id="@+id/Result_EditButton"/>
        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="메인으로 돌아가기"
            android:id="@+id/Result_EndButton"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
