<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="25dp">

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="타입"
                android:textColor="#FFDABB"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="0000. 00. 00"
                android:textColor="#FFDABB"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Result_Situation_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="상황"
                android:textStyle="bold"
                android:textColor="#FFDABB"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/type" />

            <TextView
                android:id="@+id/Result_Situation_UserInput"
                android:layout_width="0dp"
                android:layout_below="@id/Result_Situation_Title"
                android:layout_marginTop="15dp"
                android:background="@drawable/border"
                android:backgroundTint="#C3FAD1C8"
                android:padding="18dp"
                android:text="상황 기록"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                app:layout_constraintHeight_percent="0.025"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Result_Situation_Title"
                app:layout_constraintWidth_percent="1" />


            <TextView
                app:layout_constraintTop_toBottomOf="@id/Result_Situation_UserInput"
                android:id="@+id/Result_Thought_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="생각"
                android:textStyle="bold"
                android:textColor="#FFDABB"
                android:textSize="18dp" />


            <TextView
                app:layout_constraintTop_toBottomOf="@id/Result_Thought_Title"
                android:id="@+id/Result_Thought_UserInput"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="1"
                android:layout_height="wrap_content"
                android:layout_below="@id/Result_Thought_Title"
                android:layout_marginTop="15dp"
                android:background="@drawable/border"
                android:backgroundTint="#C3FAD1C8"
                android:padding="18dp"
                android:text="생각 기록"
                android:textSize="15dp" />


            <TextView
                app:layout_constraintTop_toBottomOf="@id/Result_Thought_UserInput"
                android:id="@+id/Result_Emotion_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="감정"
                android:textStyle="bold"
                android:textColor="#FFDABB"
                android:textSize="18dp"/>


            <TextView
                app:layout_constraintTop_toBottomOf="@id/Result_Emotion_Title"
                android:id="@+id/Result_Emotion_Text"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="1"
                android:layout_height="wrap_content"
                android:layout_below="@id/Result_Thought_Title"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:backgroundTint="#C3FAD1C8"
                android:padding="18dp"
                android:text="감정"
                android:textSize="15dp" />

            <TextView
                app:layout_constraintTop_toBottomOf="@id/Result_Emotion_Text"
                android:id="@+id/Result_Emotion_UserInput"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="1"
                android:layout_height="wrap_content"
                android:layout_below="@id/Result_Thought_Title"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:backgroundTint="#C3FAD1C8"
                android:padding="18dp"
                android:text="감정 기록"
                android:textSize="15dp" />

            <TextView
                app:layout_constraintTop_toBottomOf="@id/Result_Emotion_UserInput"
                android:id="@+id/Result_Reflection_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="회고"
                android:textColor="#685E5C"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                app:layout_constraintTop_toBottomOf="@id/Result_Reflection_Title"
                android:id="@+id/Result_Reflection_UserInput"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="1"
                android:layout_height="wrap_content"
                android:layout_below="@id/Result_Reflection_Title"
                android:layout_marginTop="15dp"
                android:background="@drawable/border"
                android:backgroundTint="#C3FAD1C8"
                android:padding="18dp"
                android:text="회고 기록"
                android:textSize="15dp" />


            <Button
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/Result_Reflection_UserInput"
                android:id="@+id/Result_EditButton"
                app:layout_constraintHorizontal_weight="0.4"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="1"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.075"
                android:layout_marginTop="25dp"
                android:backgroundTint="#A68B86"
                android:text="수정" />

            <Button
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Result_EditButton"
                android:id="@+id/Result_EndButton"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="1"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.075"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="50dp"
                android:backgroundTint="#E1BEB6"
                android:text="메인으로 돌아가기" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>
