<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainPage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        android:background="#84AED1"
        android:gravity="center">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/titleicon"
            app:tint="#F3F5F6"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 마음 일지"
            android:textColor="#F3F5F6"
            android:textSize="18dp"
            android:layout_gravity="left" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="따끈따끈/캐캐묵은"
                android:id="@+id/Result_Type"
                android:gravity="right"
                android:layout_margin="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000. 00. 00"
                android:id="@+id/Result_Date"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"/>

            <ImageView
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/titleicon"
                android:id="@+id/Result_Situation_Icon"
                app:tint="#2C2B2B" />

            <TextView
                android:layout_marginTop="60dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상황"
                android:textColor="#2C2B2B"
                android:textSize="23dp"
                android:layout_toRightOf="@id/Result_Situation_Icon"
                android:id="@+id/Result_Situation_Title"/>

            <TextView
                android:layout_below="@id/Result_Situation_Title"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ"
                android:textSize="14dp"
                android:background="@drawable/border"
                android:id="@+id/Result_Situation_UserInput"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/titleicon"
                android:id="@+id/Result_Thought_Icon"
                app:tint="#2C2B2B" />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생각"
                android:textColor="#2C2B2B"
                android:textSize="23dp"
                android:layout_toRightOf="@id/Result_Thought_Icon"
                android:id="@+id/Result_Thought_Title"/>

            <TextView
                android:id="@+id/Result_Thought_UserInput"
                android:text="ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Result_Thought_Title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:textSize="14dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/titleicon"
                android:id="@+id/Result_Emotion_Icon"
                app:tint="#2C2B2B" />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="감정"
                android:textColor="#2C2B2B"
                android:textSize="23dp"
                android:layout_toRightOf="@id/Result_Emotion_Icon"
                android:id="@+id/Result_Emotion_Title"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Result_Emotion_Icon"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:layout_marginLeft="20dp"
                android:id="@+id/Result_CoreEmotion">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="코어 감정"
                    android:textColor="@color/black"
                    android:id="@+id/Result_CoreEmotionText"/>

                <ImageView
                    android:id="@+id/Result_CoreEmotionIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/Result_CoreEmotionText"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/orange_happiness" />

                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기쁨"
                    android:layout_below="@id/Result_CoreEmotionIcon"
                    android:layout_marginLeft="33dp"
                    android:id="@+id/Reulst_CoreEmotionText"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Result_CoreEmotion"
                android:layout_alignTop="@id/Result_CoreEmotion"
                android:background="@drawable/border"
                android:layout_marginLeft="20dp"
                android:id="@+id/Result_SecondaryEmotion"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이차 감정"
                    android:textColor="@color/black"
                    android:id="@+id/Result_SecondaryEmotionText"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="22dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginBottom="10dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/darkblue_trust"
                                android:id="@+id/Result_SecondaryEmotionIcon_Trust"/>

                            <TextView
                                android:layout_marginBottom="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="신뢰"
                                android:layout_below="@id/Result_SecondaryEmotionIcon_Trust"
                                android:layout_marginLeft="34dp"
                                android:id="@+id/CoreEmotionText_Trust"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="22dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginBottom="10dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/green_anticipation"
                                android:id="@+id/Result_SecondaryEmotionIcon_Anticipation"/>

                            <TextView
                                android:layout_marginBottom="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="기대"
                                android:layout_below="@id/Result_SecondaryEmotionIcon_Anticipation"
                                android:layout_marginLeft="34dp"
                                android:id="@+id/CoreEmotionText_Anticipation"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="22dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginBottom="10dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/yellow_surprise"
                                android:id="@+id/Result_SecondaryEmotionIcon_Surprise"/>

                            <TextView
                                android:layout_marginBottom="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="놀람"
                                android:layout_below="@id/Result_SecondaryEmotionIcon_Surprise"
                                android:layout_marginLeft="34dp"
                                android:id="@+id/CoreEmotionText_Surprise"/>

                        </RelativeLayout>

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/Result_Emotion_UserInput"
            android:text="ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Result_Thought_Title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/titleicon"
                android:id="@+id/Result_Reflection_Icon"
                app:tint="#2C2B2B" />

            <TextView
                android:id="@+id/Result_Reflection_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/Result_Reflection_Icon"
                android:text="회고"
                android:textColor="#2C2B2B"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/Result_Reflection_UserInput"
                android:text="ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Result_Reflection_Title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:textSize="14dp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="◀ 이전"
                android:id="@+id/Result_PreviousButton"/>

            <Button
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="수정"
                android:id="@+id/Result_EditButton"/>
        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="메인으로 돌아가기"
            android:id="@+id/Result_EndButton"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
