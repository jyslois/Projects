<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainPage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        android:background="#84AED1"
        android:gravity="center">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 마음 일지"
            android:textColor="#F3F5F6"
            android:textSize="18dp"
            android:layout_gravity="left" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/progress_3"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            app:tint="#F3F5F6"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/titleicon"
                android:id="@+id/RecordIcon"
                app:tint="#2C2B2B" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생각"
                android:textStyle="bold"
                android:textColor="#2C2B2B"
                android:textSize="28dp"
                android:layout_toRightOf="@id/RecordIcon"
                android:id="@+id/Record_Thought_Title"/>

            <ImageView
                android:id="@+id/Record_Thought_Tips"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/Record_Thought_Title"
                android:padding="10dp"
                android:src="@drawable/tips" />

        </RelativeLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="어떤 생각이 들었나요."
            android:textSize="16dp"
            android:id="@+id/Record_Thought_Instruction"/>

        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:textSize="14dp"
            android:lines="24"
            android:background="@drawable/border"
            android:hint="@string/thoughtHints"
            android:id="@+id/Record_Thought_UserInput"/>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="◀ 이전"
                android:layout_marginBottom="30dp"
                android:id="@+id/Record_PreviousButton"/>

            <Button
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="▶ 다음"
                android:layout_marginBottom="30dp"
                android:id="@+id/Record_NextButton"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>