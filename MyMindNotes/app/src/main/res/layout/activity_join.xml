<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/space"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/space">

                <ImageView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="-20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.15"
                    android:src="@drawable/jointitle"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/joinTitle"/>

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/joinTitle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/emailText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="이메일"
                    android:textColor="#CDAF97" />


                <EditText
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/emailText"
                    android:backgroundTint="#ABF8E6D8"
                    android:id="@+id/emailInput"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.6"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.08"
                    android:padding="15dp"
                    android:textSize="14.5dp"
                    android:layout_below="@id/emailText"
                    android:layout_alignLeft="@id/emailText"
                    android:background="@drawable/rounded_border"
                    android:hint="이메일 입력"
                    android:inputType="textEmailAddress" />


                <Button
                    android:padding="15dp"
                    android:id="@+id/emailCheckButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.092"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/emailInput"
                    android:backgroundTint="#C3BE9F98"
                    android:text="중복확인"
                    app:layout_constraintWidth_percent="0.345"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/emailInput"
                    app:layout_constraintTop_toBottomOf="@id/emailText"/>

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/emailInput"
                    android:textColor="#CDAF97"
                    android:id="@+id/passwardText"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emailInput"
                    android:layout_alignLeft="@id/emailInput"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:text="비밀번호" />

                <EditText
                    app:layout_constraintTop_toBottomOf="@id/passwardText"
                    android:id="@+id/passwordInput"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="1"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.08"
                    android:layout_below="@id/passwardText"
                    android:layout_alignLeft="@id/passwardText"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/rounded_border"
                    android:backgroundTint="#ABF8E6D8"
                    android:hint="영문+숫자 조합 6자 이상"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textSize="14.5dp" />

                <EditText
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/passwordInput"
                    android:backgroundTint="#ABF8E6D8"
                    android:id="@+id/passwordRetypeInput"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="1"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.08"
                    android:layout_below="@id/passwordInput"
                    android:layout_alignLeft="@id/passwordInput"
                    android:background="@drawable/rounded_border"
                    android:hint="비밀번호 확인"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textSize="14.5dp" />

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/passwordRetypeInput"
                    android:textColor="#CDAF97"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/passwordRetypeInput"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:text="닉네임"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/nickNameText"/>

                <EditText
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/nickNameText"
                    android:backgroundTint="#ABF8E6D8"
                    android:id="@+id/nickNameInput"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.6"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.08"
                    android:layout_below="@id/nickNameText"
                    android:layout_alignLeft="@id/nickNameText"
                    android:background="@drawable/rounded_border"
                    android:hint="특수문자 제외 2자 이상"
                    android:inputType="textEmailAddress"
                    android:padding="15dp"
                    android:textSize="14.5dp" />

                <Button
                    android:padding="15dp"
                    android:layout_marginTop="-5dp"
                    android:id="@+id/nickNameCheckButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.092"
                    android:layout_marginLeft="16dp"
                    android:backgroundTint="#C3BE9F98"
                    android:text="중복확인"
                    app:layout_constraintLeft_toRightOf="@id/nickNameInput"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/nickNameInput"
                    app:layout_constraintWidth_percent="0.345" />

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/nickNameInput"
                    android:textColor="#CDAF97"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/nickNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="생년"
                    android:gravity="left"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/birthyearText"/>


                <EditText
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/birthyearText"
                    android:backgroundTint="#ABF8E6D8"
                    android:id="@+id/birthyearInput"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="1"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.08"
                    android:layout_below="@id/birthyearText"
                    android:layout_alignLeft="@id/birthyearText"
                    android:background="@drawable/rounded_border"
                    android:hint="태어난 년도"
                    android:inputType="textEmailAddress"
                    android:padding="15dp"
                    android:textSize="14.5dp" />

                <com.google.android.material.button.MaterialButton
                    app:layout_constraintTop_toBottomOf="@id/birthyearInput"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="30dp"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="1"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.07"
                    app:cornerRadius="100dp"
                    android:text="회원가입"
                    android:layout_below="@id/birthyearInput"
                    android:layout_alignLeft="@id/nickNameInput"
                    android:id="@+id/joinButton"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>