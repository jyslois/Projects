<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mainmenu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.07"
            app:layout_constraintHeight_percent="0.03"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/mainmenu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintTop_toBottomOf="@id/mainmenu">

            <TextView
                android:padding="5dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toTopOf="@id/arrow1"
                android:id="@+id/mainpagetext"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="오늘 하루도 고생했어요."
                android:textColor="#CDAF97"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                 />

            <ImageView
                android:layout_marginBottom="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/arrow2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.033"
                android:layout_gravity="center"
                android:src="@drawable/arrow"
                android:id="@+id/arrow1"
                app:tint="#C3BE9F98" />
            <ImageView
                android:layout_marginBottom="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/arrow3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.033"
                android:layout_gravity="center"
                android:src="@drawable/arrow"
                android:id="@+id/arrow2"
                app:tint="#B0BE9F98" />
            <ImageView
                android:layout_marginBottom="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/addRecordButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.033"
                android:layout_gravity="center"
                android:src="@drawable/arrow"
                android:id="@+id/arrow3"
                app:tint="#59BE9F98" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                app:backgroundTint="#BE9F98"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                app:rippleColor="#9CBE9F98"
                app:icon="@drawable/add"
                app:iconTint="#FAF7F6"
                android:id="@+id/addRecordButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>