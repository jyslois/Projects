<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordMindChoice">

    <ImageView
        android:id="@+id/choicebackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:text="닉네임 님,"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CDAF97"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/nickNameText"/>

        <TextView
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CDAF97"
            android:text="오늘은 어떤 마음에 대해 알아 볼까요?"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/recordText"/>

        <com.google.android.material.button.MaterialButton
            android:textColor="#1E1010"
            android:backgroundTint="#B2BE9F98"
            android:layout_marginTop="10dp"
            android:layout_width="320dp"
            android:layout_height="80dp"
            app:cornerRadius="20dp"
            android:text="@string/traumaRecord"
            android:layout_gravity="center"
            android:id="@+id/traumaButton"/>

        <com.google.android.material.button.MaterialButton
            android:textColor="#1E1010"
            android:backgroundTint="#B2BE9F98"
            android:layout_marginTop="10dp"
            android:layout_width="320dp"
            android:layout_height="80dp"
            app:cornerRadius="20dp"
            android:text="@string/mindRecord"
            android:layout_gravity="center"
            android:id="@+id/todayEmotionButton"/>


    </LinearLayout>


</FrameLayout>