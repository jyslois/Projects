<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#DDDCB8B0"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:paddingLeft="12dp"
        android:paddingRight="10dp">

        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/emotionCircle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintWidth_percent="0.09"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/purple_etc" />

        <TextView
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/emotionCircle"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/emotionCircle"
            android:text="0000.00.00 0요일" />

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/date"
            android:id="@+id/division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/date"
            android:text="   ·   "
            android:textStyle="bold" />


        <TextView
            app:layout_constraintLeft_toRightOf="@id/division"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/division"
            android:text="ㅇㅇ 일기" />


        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/emotionCircle"
            app:layout_constraintTop_toBottomOf="@id/date"
            android:id="@+id/emotionWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_toRightOf="@id/emotionCircle"
            android:text="감정"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/emotionWord"
            app:layout_constraintLeft_toRightOf="@id/emotionCircle"
            android:id="@+id/situation"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/emotionWord"
            android:layout_toRightOf="@id/emotionCircle"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="상황" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>